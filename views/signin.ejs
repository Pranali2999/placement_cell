<%- include('_bootstrap_meta')%>
<link rel="stylesheet" href="/css/signin.css" type="text/css">
	<body>
		<div id="my-container">
			<div class="mx-auto mt-3 mb-3" style="width: 100px">
				<h4>Sign In</h4>
			</div>

			<form action="/users/create-session" method="POST" >
				<!-- Email input -->
				<div class="form-outline mb-4">
					<label class="form-label" for="email">Enter Email</label>
					<input type="email" class="form-control" id="email" placeholder="xyz@email.com" name="email" required />
				</div>

				<!-- Password input -->
				<div class="form-outline mb-4">
					<label class="form-label" for="password">Enter Password</label>
					<input type="password" id="password" class="form-control" name="password" required />
				</div>

				<!-- Submit button -->
				<button type="submit" class="btn btn-success btn-block mb-4">Sign in</button>

				<!-- Register buttons -->
				<div class="text-center">
					<p>Create an account.. <a href="/users/signup">Register</a></p>
				</div>
			</form>
		</div>
		<%- include('_bootstrap_script')%>
	</body>

