 <%- include('_bootstrap_meta')%>
  <link rel="stylesheet" href="/css/signup.css">
  <body>
    <div id="wrapper" >
      <div class="mx-auto mt-3 mb-4">
        <h4>Sign Up</h4>
      </div>
      <div class="form-outline mb3">
        <form action="/users/create" method="post" >

          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Your name" required/>
        </div>

        <div class="form-outline mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" placeholder="xyz@email.com" name="email" required />
        </div>

        <div class="form-outline mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required />
        </div>

        <div class="form-outline mb-3">
          <label for="Password" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
        </div>
        <div class="form-outline mb-4 mt-3" style="display: flex; justify-content: center">
          <button type="submit" class="btn btn-success btn-block mb-4">Sign Up</button>
        </div>
      </form>
      <div >
        <a href="/users/signin" >Already have account?</a>
      </div>
      </div>
    <%- include('_bootstrap_script')%>

  </body>
